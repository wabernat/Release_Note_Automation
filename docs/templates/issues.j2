<h2>{{ ctx.issue_type }} Issues</h2>
{% if ctx.tickets %}
<table>
    <thead>
        <tr>
            <td>Key</td>
            <td>Severity</td>
            <td>Component(s)</td>
            <td>Description</td>
        </tr>
    </thead>

    {% for item in ctx.tickets %}
    <tr>
        <td class="nowrap"><a href="https://scality.atlassian.net/browse/{{ item.key }}">{{ item.key }}</td>
        <td>{{ item.severity }}</td>
        <td>
            <p>{{ item.components|join(' ') }}</p>
        </td>
        <td style="width=100">{{ item.description }}</td>
    </tr>
    {% endfor %}

</table>
{% else %}
No {{ ctx.issue_type }} Issues
{% endif %}
