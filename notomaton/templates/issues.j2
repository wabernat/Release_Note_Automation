<h3>{{ issue_type | capitalize }} Issues</h3>
{% if issues %}
<table>
    <thead>
        <tr>
            <td width=110px>Key</td>
            <td width=80px>Severity</td>
            <td>Component(s)</td>
            <td>Description</td>
        </tr>
    </thead>

    {% for item in issues %}
    <tr>
        <td><a href="https://scality.atlassian.net/browse/{{ item.key }}">{{ item.key }}</td>
        <td>{{ item.severity }}</td>
        <td>
            <p>{{ item.components|join(' ') }}</p>
        </td>
        <td>{{ item.description }}</td>
    </tr>
    {% endfor %}

</table>
{% else %}
No {{ issue_type }} Issues
{% endif %}
