<?xml version="1.0" encoding="utf-8"?>
<html>

<head> </head>

<body>
    <h2>{{ issue_type }} Issues</h2>
    <table>
        <thead>
            <tr>
                <td>Key</td>
                <td>Severity</td>
                <td>Component(s)</td>
                <td>Release Notes Description</td>
            </tr>
        </thead>

        {% for item in notes %}
        <tr>
            <td>{{ item.key }}</td>
            <td>{{ item.severity }}</td>
            <td>
                <p>
                    {{ item.components|join(' ') }}
                </p>
            </td>
            <td>{{ item.description }}</td>
        </tr>
        {% endfor %}

    </table>
</body>

</html>
